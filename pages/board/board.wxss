/* 这里写样式 */
.container {
  background-color:#f6f6f6;
}
.slide swiper {
  height: 400rpx;
}
.slide-image {
  width: 100%;
  height: 100%;
}

.board {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
}

.board-item {
  display: flex;
  flex: 1;
  /*cursor: pointer;*/
  border: 1rpx solid #eee;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  padding: 40rpx;
  background-color: #fff;
}

.board-item text {
  flex: 1;
}

.board-item image {
  width: 40rpx;
  height: 40rpx;
}
